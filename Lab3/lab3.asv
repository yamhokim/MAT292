h1 = 0.1;
f1 = @(t,y) y*tan(t) + sin(t);
t01 = 0;
t1 = pi;
y01 = 0;
[soln1_x, soln1_y] = odesolver(f1, t01, t1, y01, h1);
soln11 = ode45(f1, [t01, t1], y01);
plot(soln1_x, soln1_y, soln11.x, soln11.y, 'x', 'MarkerSize', 2, 'LineWidth', 2)
%% 
h1 = 0.1;
